<div class="row  justify-content-center">
  <div class="card-deck">

    {%- for box in boxes | sortByOrder -%}

      <div class="card unit-7 unit-7-{{box.data.color}} h-100" style="width:20rem; ">
        <div class="unit-7-icon">
          <span class="icon-wrap icon-wrap-{{box.data.color}}">
            {%- if box.data.initial | length -%}
              <span class="text-primary {{box.data.initial}}"></span>
            {%- else -%}
              <span class="text-primary">ùùª</span>
            {%- endif -%}
          </span>
        </div>
        <a href="{{ box.url | url }}">

          <div class="card-body">
            <h3 class="card-title">{{box.data.headline}}</h3>
          </div>

          <div class="card-footer">
            {%- if box.data.title | length -%}
              <h4 class="card-text">
                {{box.data.title}}
              </h4>
            {%- endif -%}
          </div>
        </a>

      </div>
    {%- endfor -%}

  </div>

</div>
