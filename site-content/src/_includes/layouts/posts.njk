{% extends "layouts/base.njk" %}

{% block content %}
  <div class="site-section">
    <div class="container sp pt-5" style="padding-top: 150px !important;">
      <div class="row justify-content-md-center pt-100">
        <div class="col-md-10">

          <div class="markdown-content">
            <h1 class="page-title">

              {{ title }}
            </h1>
            <p class="lead">
              Temps de lecture :
              {{ content | readingTime }}.
              {# by
        {{ author}} #}
              {# <time class="postlist-date" datetime="{{ post.date | date('Y-MM-DD') }}">{{ post.date|date("DD MMMM Y", locale) }}</time>#}
            </p>
            <h2 class="page-subtitle">
              {{ summary }}
            </h2>
            <p>
              {{content | safe}}

            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock content %}
