{% extends "layouts/base.njk" %}

{% block content %}
  <div class="site-section">
    <div class="container sp pt-5" style="padding-top: 150px !important;">
      <div class="row justify-content-md-center pt-100">
        <div class="col">
          <div class="markdown-content">
            <h2 class="page-title">
              {{ title }}
            </h2>

            {{content | safe}}

            <div class="list-group">

              {% for offre in collections.recrutements %}
                <a href="{{ offre.url |url }}" class="list-group-item list-group-item-action flex-column align-items-start active">
                  <div class="d-flex w-100 justify-content-between">
                    <p class="mb-0 mt-0">
                      {{ offre.data.title}}

                      {{ offre.data.type}}
                      -
                      {{ offre.data.location}}
                    </p>
                  </div>
                </a>

              {% endfor %}

            </div>

          </div>

        </div>
      </div>

    </div>
  </div>
</div>
{% endblock content %}
