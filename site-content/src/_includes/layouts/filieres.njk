{% extends "layouts/base.njk" %}

{% block content %}
  <div class="site-section">
    <div class="container sp pt-5" style="padding-top: 150px !important;">
      <div class="row justify-content-md-center pt-100">
        <div class="col-md-12">
          <div class=" reader-bar-start markdown-content">
            <h1 class="page-title">
              {{ title }}
            </h1>

            <p class="lead">Temps de lecture :
              {{ content | readingTime }}.
            </p>
            {% if topboxes | length %}
              {% if collections.filieres | length %}
                {%- set boxes = collections.filieres -%}
                {%- include 'partials/boxes.njk' -%}
              {% endif %}
            {% endif %}

            {% if subtitle | length %}
              <h2 class="page-subtitle">
                {{ subtitle }}
              </h2>
            {% endif %}

            {{content | safe}}

            {% if bottomboxes | length %}
              {%- set boxes = collections.filieres -%}
              {%- include 'partials/boxes.njk' -%}
            {% endif %}
            <p>
              <a class="btn  btn-outline-dark btn-sm float-right" href="https://docs.google.com/document/d/{{gsuiteid}}">Sugg√©rer une modification</a>
            </p>
          </div>
          {% readerBar %}
        </div>
      </div>
    </div>
  </div>
{% endblock content %}
